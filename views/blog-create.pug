extends layout

block content
    h2 Create a New Post
    form(method="POST" action="/blog/create")
      label Enter Title:
      input(name="title")
      br
      br
      br
      label Enter Content:
      textarea(name="content" rows="10" cols="100")
      br
      br
      input(type="submit" value="Create Blog Post")
      br
      br
      br
      br
      a(href='/' style={color: 'black'}) Back

